{
  "properties": {
    "displayName": "Deny-Public-IP",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "Prevents creation of Public IP addresses.",
    "metadata": {
      "version": "1.0.0",
      "category": "Custom"
    },
    "parameters": {},
    "policyRule": {
      "if": {
        "field": "type",
        "equals": "Microsoft.Network/publicIPAddresses"
      },
      "then": {
        "effect": "deny"
      }
    }
  }
}